    <!-- LOGIN FORM -->
    <!-- <div class="container-fluid bg-image img-fluid img"> -->
    <div class="container cont">
        <form id="form" action="/login" method="post">
            <div class="div-col">
                <div class="row ">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <h1 class="fs-2 fw-bold reg-head">LOGIN TO YOUR PORTAL</h1>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <label for="validationCustomUsername" class="form-label fw-bolder fs-5">Username</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend"><i
                                    class="fa-solid fa-users"></i></span>
                            <input type="text" class="form-control" name="username" id="validationCustomUsername"
                                aria-describedby="inputGroupPrepend" required>
                            <div class="invalid-feedback">
                                Please choose a username.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <!-- <label for="inputEmail4" class="form-label fw-bold fs-5">Gym Name</label> -->
                        <!-- <input type="text" class="form-control" id="inputEmail4" placeholder="Gym name"> -->
                        <label for="validationCustomGymName" class="form-label fw-bolder fs-5">Gym Name</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend"><i
                                    class="fa-solid fa-dumbbell"></i></span>
                            <input type="text" class="form-control" name="gymName" id="validationCustomGymName"
                                aria-describedby="inputGroupPrepend" required>
                            <div class="invalid-feedback">
                                Please choose a username.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <!-- <label for="inputEmail4" class="form-label fw-bolder fs-5">Phone No.</label> -->
                        <!-- <input type="number" class="form-control" id="inputEmail4" placeholder="Enter your Phone no."> -->
                        <label for="validationCustomPhone" class="form-label fw-bolder fs-5">Phone No.</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend"><i
                                    class="fa-solid fa-phone"></i></span>
                            <input type="tel" class="form-control" name="phone" id="validationCustomPhone"
                                aria-describedby="inputGroupPrepend" required>
                            <div class="invalid-feedback">
                                Please choose a username.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <!-- <label for="inputEmail4" class="form-label fw-bolder fs-5">Email</label> -->
                        <!-- <input type="email" class="form-control" id="inputEmail4" placeholder="Enter your email"> -->
                        <label for="validationCustomEmail" class="form-label fw-bolder fs-5">Email</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend"><i
                                    class="fa-solid fa-envelope"></i></span>
                            <input type="email" class="form-control" name="email" id="validationCustomEmail"
                                aria-describedby="inputGroupPrepend" required>
                            <div class="invalid-feedback">
                                Please choose a username.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <!-- <label for="inputEmail4" class="form-label fw-bolder fs-5">Password</label> -->
                        <!-- <input type="password" class="form-control" id="inputEmail4" placeholder="Enter your password"> -->
                        <label for="validationCustomPassword" class="form-label fw-bolder fs-5">Password</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend"><i class="fa-solid fa-key"></i></span>
                            <input type="password" class="form-control" name="password" id="validationCustomPassword"
                                aria-describedby="inputGroupPrepend" required>
                            <div class="invalid-feedback">
                                Please choose a username.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary register">Submit</button>
                </div>
            </div>
        </form>
    </div>
